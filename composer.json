{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "laravel/laravel",
    "type": "project",
    "description": "The skeleton application for the Laravel framework.",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.4.0",
        "laravel/ai": ">=0.1.3",
        "laravel/framework": "^12.51",
        "laravel/tinker": "^2.11.1",
        "livewire/livewire": "^4.1.4",
        "nunomaduro/essentials": "^1.0.1",
        "smalot/pdfparser": "^2.12.3",
        "spatie/browsershot": "^5.2",
        "spatie/laravel-markdown": "^2.7",
        "spatie/laravel-pdf": "^2.1"
    },
    "require-dev": {
        "driftingly/rector-laravel": "^2.1.2",
        "fakerphp/faker": "^1.24.1",
        "larastan/larastan": "^3.9.2",
        "laravel/boost": "^2.1.2",
        "laravel/pail": "^1.2.6",
        "laravel/pint": "^1.27",
        "laravel/sail": "^1.53",
        "mockery/mockery": "^1.6.12",
        "nunomaduro/collision": "^8.8.3",
        "pestphp/pest": "^4.3.2",
        "pestphp/pest-plugin-laravel": "^4.0",
        "pestphp/pest-plugin-type-coverage": "^4.0.3",
        "rector/rector": "^2.3.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "setup": [
            "composer install",
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php artisan key:generate",
            "@php artisan migrate --force",
            "npm install",
            "npm run build"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#a7f3d0,#f9a8d4,#fdba74\" \"php artisan serve\" \"php artisan queue:work --timeout=300 --tries=1\" \"php artisan queue:work --timeout=300 --tries=1\" \"php artisan queue:work --timeout=300 --tries=1\" \"npm run dev\" --names='server,queue-1,queue-2,queue-3,vite'"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan boost:update --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "pre-package-uninstall": [
            "Illuminate\\Foundation\\ComposerScripts::prePackageUninstall"
        ],
        "update:requirements": [
            "composer bump",
            "npx npm-check-updates -u"
        ],
        "lint": [
            "rector",
            "pint --parallel"
        ],
        "test:type-coverage": "pest --type-coverage --min=100 --memory-limit=2G",
        "test:lint": [
            "pint --parallel --test",
            "rector --dry-run"
        ],
        "test:types": [
            "phpstan"
        ],
        "test": [
            "@test:type-coverage",
            "@test:lint",
            "@test:types"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
